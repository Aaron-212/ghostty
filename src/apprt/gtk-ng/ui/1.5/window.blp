using Gtk 4.0;
using Adw 1;

template $GhosttyWindow: Adw.ApplicationWindow {
  styles [
    "window",
  ]

  default-width: 800;
  default-height: 600;

  content: Gtk.Box {
    orientation: vertical;
    spacing: 0;

    $GhosttyDebugWarning {}

    $GhosttySurface surface {
      close-request => $surface_close_request();
    }
  };
}
